$input = lighten($UI.colors.dark, 75%)
$thead = $UI.colors.darkLight
$header = $UI.colors.secondaryText
$darkHeader = $UI.colors.whiteLight
$value = $UI.colors.success
$type = $UI.colors.additional1

.input
  background-color white
  border-color $input
  border-width 1px
  padding 0 0.5u

.header
  font-size 12px
  letter-spacing 1px
  font-weight bold
  color $header

.possibleValue
  flex-direction row

.value
  color $value
  font-style italic

.type
  color $type
  font-style italic

.dark
  &.header
    color $darkHeader
  &.value
    color lighten($value, 30%)
  &.type
    color lighten($type, 30%)

.checkbox
  align-self flex-end
