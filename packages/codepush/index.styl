_text = #3E4657
_green = #24B47E
_barBg = rgba(_green, 0.25)
_fillerBg = _green

.root
  padding 30px
  flex 1
  justify-content center

.title
  font-size 32px
  text-align center
  font-weight 600
  color _text

.description
  font-size 24px
  text-align center
  color _text
  letter-spacing 0.6
  font-weight 400

.bar
  border-radius 4px
  height 4px
  background-color _barBg
  overflow hidden

.percent
  text-align right
  font-size 12px
  font-weight 600
  color _green

.filler
  position absolute
  top 0
  left 0
  bottom 0
  background-color _fillerBg
