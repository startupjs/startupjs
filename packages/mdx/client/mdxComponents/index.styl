$codeBg = #F3F4F4 // #fafafa
$exampleBg = #f5f5f5

.listIndex
.p
.inlineCode
.inlineCodeWrapper
.link
  font(body1)

.p
  margin-top 2u

.h2
  margin-top 8u
  &-text
    fontFamily('heading', 600)

.h6
  margin-top 6u

.anchor
  align-self flex-start
  word-break break-word

  &-link
    margin-left 1u
    opacity 0

    &.hover
      opacity 1

.inlineCodeWrapper
  background-color $codeBg
  border-width 1px
  border-color rgba(black, 0.05)
  border-radius .5u

.li
  padding-left 2u

.listIndex
  width 3u
  margin-top 2u
  text-align center
  padding-right 2px

.listContent
  flex 1

.divider
  height 0.5u
  background-color $UI.colors.mainText
  margin-bottom 1.5u

.center
  text-align center
