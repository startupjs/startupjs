$codeBg = #F3F4F4 // #fafafa
$exampleBg = #f5f5f5

.listIndex
.p
.inlineCode
.inlineCodeWrapper
.link
  font(l)

.p
  margin-top 2u

.h2
  margin-top 8u
  &-text
    font-weight bold

.h6
  margin-top 6u

.anchor
  align-self flex-start

  &-link
    margin-left 1u
    display none

    &.hover
      display inline-flex

.example
  padding 4u 2u
  background-color $exampleBg
  border-bottom-left-radius 1u
  border-bottom-right-radius 1u

.inlineCodeWrapper
  background-color $codeBg
  border-width 1px
  border-color rgba(black, 0.05)
  border-radius 0.5u
  +web()
    white-space pre // TODO: check if it works and looks good on Native

.li
  padding-left 2u

.listIndex
  width 3u
  margin-top 2u
  text-align center
  padding-right 2px

.listContent
  flex 1

.divider
  height 0.5u
  background-color $UI.colors.mainText
  margin-bottom 1.5u
