$codeBg = #fafafa
$exampleBg = #f5f5f5

.space,
.listIndex,
.p,
.t
  font(l)

.p
  margin-top 2u

.h2
  margin-top 8u

.h6
  margin-top 2u

.example
  padding 4u 2u
  background-color $exampleBg
  border-bottom-left-radius 1u
  border-bottom-right-radius 1u

.inlineCode
  background-color $codeBg

  &-space,
  &-code
    font(l)


.li
  padding-left 2u

.listIndex
  width 3u
  margin-top 2u
  text-align center
  padding-right 2px

.listContent
  flex 1
