$backgroundColor = #f5f5f5

.code, .example
  margin-top 2u
  padding 2u
  background-color $backgroundColor

.example
  border-top-left-radius 1u
  border-top-right-radius 1u

.code
  border-radius 1u

.exampleContent
  flex-direction column
  flex-grow 1

.examplePadding
  padding 2u

.collapse
  background-color $backgroundColor
  border-bottom-left-radius 1u
  border-bottom-right-radius 1u

.collapseHeader
  padding 0 2u 2u

.collapseAction
  margin-left 2u

.collapseContent
  border-bottom-left-radius 1u
  border-bottom-right-radius 1u
  overflow hidden
