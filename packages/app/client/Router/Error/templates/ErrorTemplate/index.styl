$email = var(--color-text-primary)

.root
  flex-grow 1
  justify-content center
  align-items center
  padding 4u

.email
  color $email
  text-decoration-line underline
  text-decoration-color $email

.card
  justify-content center
  padding 2u
  border-width 1px
  border-style solid
  border-color var(--color-border)
  border-radius .5u
  background-color var(--color-bg-error-transparent)

.text
  color var(--color-text-on-bg)

.info
  color var(--color-text-error)
  font-size 4.5u
  line-height 6u

.description
  font-size 2.5u
  line-height 3.5u

.span
  line-height 2.5u

.backButton
  justify-content center
  padding 0 2u
  align-items flex-start
  margin-top 3u
  width 14u
  height 4u
  border-width 1px
  border-style solid
  border-color var(--color-border-dim)
  border-radius .5u

.label
  font-weight 500

.arrow
  margin-right 1u
