$email = var(--color-text-primary)

.root
  flex-grow 1
  justify-content center
  align-items center
  padding 4u

.card
  justify-content center
  padding 2u
  border 1px solid var(--color-border-main)
  border-radius .5u
  background-color var(--color-bg-error-transparent)
  max-width 100u
  width 100%

.email
  color $email
  text-decoration underline $email

.text
  color var(--color-text-main)

.info
  color var(--color-text-error)
  font-size 4.5u
  line-height 6u

.description
  font-size 2.5u
  line-height 3.5u

.span
  line-height 2.5u

.backButton
  justify-content center
  padding 0 2u
  align-items flex-start
  margin-top 3u
  width 14u
  height 4u
  border 1px solid var(--color-border-main-subtle)
  border-radius .5u

.label
  font-weight 500

.arrow
  margin-right 1u
