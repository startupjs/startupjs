_email = #2962ff
_error = #E25950
_dark = #3E4657

.root
  flex-grow 1
  justify-content center
  align-items center
  padding 4u

.email
  color _email
  text-decoration underline _email

.card
  justify-content center
  padding 2u
  border 1px solid rgba(_dark, .15)
  border-radius .5u
  background-color rgba(_error, .05)

.text
  color _dark

.info
  color _error
  font-size 4.5u
  line-height 6u

.description
  font-size 2.5u
  line-height 3.5u

.span
  line-height 2.5u

.backButton
  justify-content center
  padding 0 2u
  align-items flex-start
  margin-top 3u
  width 14u
  height 4u
  border 1px solid rgba(_dark, .25)
  border-radius .5u

.label
  font-weight 500

.arrow
  margin-right 1u
