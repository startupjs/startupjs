_iconMargin = 0.5u

.iconWrapper
  &.left
    &.xs
    &.s
    &.m
      margin-right 0.5u

    &.l
    &.xl
    &.xxl
      margin-right 1u

  &.right
    &.xs
    &.s
    &.m
      margin-left 0.5u

    &.l
    &.xl
    &.xxl
      margin-left 1u

.separator
  margin-left 2px
  margin-right @margin-left
  color: rgba($UI.colors.dark, 0.8)

.separator,
.content
  &.xs
    font(xs)

  &.s
    font(s)

  &.m
    font(m)

  &.l
    font(l)

  &.xl
    font(xl)

  &.xxl
    font(xxl)

:export
  colors: $UI.colors
