_variants = ('default' 'h1' 'h2' 'h3' 'h4' 'h5' 'h6' 'description')

// Add font-family when we add fonts to app

.root
  fontFamily('Roboto', 400)
  for variant in _variants
    &.{variant}
      text(variant)

  &.bold
    fontFamily('Roboto', 700)

  &.italic
    fontFamily('Roboto', 400, 'italic')

  &.bold.italic
    fontFamily('Roboto', 700, 'italic')