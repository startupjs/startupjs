_variants = ('default' 'h1' 'h2' 'h3' 'h4' 'h5' 'h6' 'description')

// Add font-family when we add fonts to app

.root
  for variant in _variants 
    &.{variant}
      text(variant)

  for variant in _variants
    &.{variant}
      if variant in ('h1' 'h2' 'h3' 'h4' 'h5' 'h6')
        fontFamily($UI.fontFamilies.heading)
      else
        fontFamily($UI.fontFamilies.normal)
    
    &.{variant}&.bold
      if variant in ('h1' 'h2' 'h3' 'h4' 'h5' 'h6')
        fontFamily($UI.fontFamilies.heading, 700)
      else
        fontFamily($UI.fontFamilies.normal, 700)

    &.{variant}&.italic
      if variant in ('h1' 'h2' 'h3' 'h4' 'h5' 'h6')
        fontFamily($UI.fontFamilies.heading, 400, 'italic')
      else
        fontFamily($UI.fontFamilies.normal, 400, 'italic')

    &.{variant}&.bold.italic
      if variant in ('h1' 'h2' 'h3' 'h4' 'h5' 'h6')
        fontFamily($UI.fontFamilies.heading, 700, 'italic')
      else
        fontFamily($UI.fontFamilies.normal, 700, 'italic')