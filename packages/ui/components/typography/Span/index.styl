_color = $UI.Span.color
_description = $UI.Span.descriptionColor
_fontSizes = (
  'xs' 's' 'm' 'l' 'xl' 'xxl' 'xxxl' 'xxxxl' 'xxxxxl' \
  'h1' 'h2' 'h3' 'h4' 'h5' 'h6'
)

// Add font-family when we add fonts to app

.root
  color _color

  for size in _fontSizes
    &.{size}
      font(size)

  &.bold
    font-weight 700

  &.italic
    font-style italic

  &.description
    color _description

// TODO: Use dark-mode $UI variables
.dark
  color rgba(white, 0.9)
  &.description
    color rgba(white, 0.5)
