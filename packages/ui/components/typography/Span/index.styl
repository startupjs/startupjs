_fontSizes = (
  'xs' 's' 'm' 'l' 'xl' 'xxl' 'xxxl' 'xxxxl' 'xxxxxl' \
  'h1' 'h2' 'h3' 'h4' 'h5' 'h6'
)

_variants = ('default' 'h1' 'h2' 'h3' 'h4' 'h5' 'h6' 'description')

// Add font-family when we add fonts to app

.root
  for variant in _variants
    &.{variant}
      text(variant)

  // DEPRECATED sizes
  for size in _fontSizes
    &.{size}
      font(size)

  &.bold
    font-weight 700

  &.italic
    font-style italic
