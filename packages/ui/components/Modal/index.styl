_overlayBg = $UI.colors.darkLighter
_modalBg = $UI.colors.white
_gutter = $UI.gutters.m

// layout styles
.root
  height 100%
  z-index 0

  &.window
    padding 0 _gutter
    // margin auto does not work for .modal class without row direction
    flex-direction row

  +web()
    position fixed
    top 0
    right 0
    left 0
    z-index 1500

.overlay
  position absolute
  top 0
  right 0
  left 0
  height 100%
  background-color _overlayBg

  +web()
    cursor pointer

.modal
  // override flex-shrink to work .root class paddings
  flex-shrink 1
  background-color _modalBg
  overflow hidden

  &.window
    margin auto
    max-height 90vh
    max-width 776px
    min-width 280px
    border-radius 4px
    shadow(4)

  &.fullscreen
    height 100%
