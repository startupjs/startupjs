$uncheckedColor = $UI.colors.dark
$checkedColor = $UI.colors.primary
$size = 2u

_size = 2u

.info
  margin-bottom 0.5u

.label
  margin-bottom 0.5u
  font(body2)

  &.focused
    color _focusedColor

.description
  margin-bottom 0.5u
  font(caption)

.selection
  margin-top -1u

.input
  padding-top 1u
  padding-bottom @padding-top

.radio
  width 2u
  height @width

  border-color $uncheckedColor
  radius(circle)
  border-width 0.25u
  justify-content center
  align-items center

  &.checked
    border-color $checkedColor

.circle
  radius(circle)
  width (_size / 2)
  height @width
  background-color $checkedColor

.container
  margin-left 1u
