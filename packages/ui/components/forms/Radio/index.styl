$uncheckedColor = var(--color-border-contrast)
$radioSize = 2u

.root
  &.row
    flex-direction row

.input
  &.row
    margin-left 2u

  &.first
    margin-left 0

.input-input
  align-self flex-start
  padding-top 1u
  padding-bottom @padding-top

.radio
  width 2u
  height @width
  border-color $uncheckedColor
  radius(circle)
  border-width 0.25u
  justify-content center
  align-items center

  &.checked
    border-color var(--color-border-primary)

  &.error
    border-color var(--color-border-error)

.circle
  radius(circle)
  width ($radioSize / 2)
  height @width
  background-color var(--color-bg-primary)

  &.error
    background-color var(--color-bg-error)

.container
  margin-left 1u
  flex-shrink 1

.description
  font(caption)
