$uncheckedColor = $UI.colors.dark
$checkedColor = $UI.colors.primary
$size = 2u

_size = 2u

.input
  padding 0.5u

.radio
  width 16px
  height @width

  border-color $uncheckedColor
  radius(circle)
  border-width 0.25u
  justify-content center
  align-items center

  &.checked
    border-color $checkedColor

.circle
  radius(circle)
  width (_size / 2)
  height @width
  background-color $checkedColor

.container
  margin-left 1u
