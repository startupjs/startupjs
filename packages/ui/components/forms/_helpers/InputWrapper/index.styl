.root
  justify-content center
  align-items center
  width 32px
  height 32px
  margin -1u 0

  &.rounded
    radius()

  &.circle
    radius(circle)

  &.squared
    border-radius 0

.background
  radius(circle)
  height 100%
  width 100%

.content
  justify-content center
  align-items center
  position absolute
  top 0
  left 0
  height 100%
  width 100%
