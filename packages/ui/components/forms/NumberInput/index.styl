_sizes = 'l' 'm' 's'
_borderColor = $UI.colors.darkLighter
_disabledColor = $UI.colors.darkLightest
_focusedColor = $UI.colors.primary
_padding = {
  l: 6u,
  m: 5u,
  s: 4u
}
_height = {
  l: 5u,
  m: 4u,
  s: 3u
}
_halfHeight = {
  l: (_height.l / 2),
  m: (_height.m / 2),
  s: (_height.s / 2)
}

.input-input
  for size in _sizes
    &.vertical.{size}
      padding-right: _padding[size]

    &.horizontal.{size}
      padding-left: _padding[size]
      padding-right @padding-left

.input-button
  position absolute
  color _inputBorderColor

  &.vertical.up
    right 0
    border-top-left-radius 0
    border-bottom-right-radius 0
    border-bottom-left-radius 0

    for size in _sizes
      &.{size}
        bottom: _halfHeight[size]

  &.vertical.down
    right 0
    bottom 0
    border-top-left-radius 0
    border-top-right-radius 0
    border-bottom-left-radius 0

  for size in _sizes
    &.vertical.{size}
      height: _halfHeight[size]

  &.horizontal.up
    bottom 0
    right 0
    border-top-left-radius 0
    border-bottom-left-radius 0

  &.horizontal.down
    bottom 0
    left 0
    border-top-right-radius 0
    border-bottom-right-radius 0

  for size in _sizes
    &.horizontal.{size}
      height: _height[size]

  &.disabled
    color _disabledColor

  &.focused
    color _focusedColor
