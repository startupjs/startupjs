$this = merge({
  trackColor: var(--color-bg-main-subtle),
  selectedColor: var(--color-bg-primary),
  stepMarker: var(--color-text-on-color)
}, $UI.RangeInput, true)

.root
  &:part(container)
    height 10u

  &:part(track)
    height 1u
    background-color $this.trackColor
    border-radius 4px

  &:part(selected)
    background-color $this.selectedColor

  &:part(marker)
    top 4px
    width 16px
    height @width
    border-radius 10px
    shadow(1)

  &:part(stepLabel)
    font-style normal
    font(caption)
    color var(--color-text-main)

  &:part(stepMarker)
    border-radius 0
    width 2px
    background-color $this.stepMarker
