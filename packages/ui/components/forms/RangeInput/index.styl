$this = merge({
  trackColor: var(--colors-darkLightest, $UI.colors.darkLightest),
  selectedColor: var(--colors-primary, $UI.colors.primary),
  stepMarker: var(--colors-whiteLight, $UI.colors.whiteLight)
}, $UI.RangeInput, true)

.root
  &:part(container)
    height 10u

  &:part(track)
    height 1u
    background-color $this.trackColor
    border-radius 4px

  &:part(selected)
    background-color $this.selectedColor

  &:part(marker)
    top 4px
    width 16px
    height @width
    border-radius 10px
    shadow(1)

  &:part(stepLabel)
    font-style normal
    font(caption)

  &:part(stepMarker)
    border-radius 0
    width 2px
    background-color $this.stepMarker
