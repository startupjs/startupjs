.root
  position relative

.label
  position absolute
  top 2px
  width 12u
  align-items center

// todo: implement common tooltip style
.text
  background-color var(--color-bg-inverse)
  padding 0.5u 1u
  font-style normal
  font(caption)
  color var(--color-text-on-bg-inverse)
  shadow(3)
  radius()

.arrow
  width 0
  height 0
  background-color transparent
  border-style solid
  border-left-width 4
  border-right-width 4
  border-bottom-width 4
  border-left-color transparent
  border-right-color transparent
  border-bottom-color var(--color-border-inverse)
  transform rotate(180deg)
