.focused
  color $UI.colors.primary

.buttons
  padding 1u

.button
  flex 1

.cancelButton
  justify-content flex-start

.confirmButton
  justify-content flex-end

.cancelButtonText
  color $UI.colors.secondaryText

.confirmButtonText
  color $UI.colors.success

.picker
  margin 5u 2u 0

.container
  overflow hidden
  border 1px solid $UI.colors.darkLighter
  border-radius 0.3rem
  background-color $UI.colors.white

:export
  colors $UI.colors