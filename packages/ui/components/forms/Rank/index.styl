.droppable
  margin-top 1u

.readonly
.droppable
.span
  flex-shrink 1
  flex-grow 1

.draggable
  background-color: $UI.colors.white
  padding 1u
  border-width 1px
  border-color: $UI.colors.darkLighter
  radius()
  margin-top 1u

.cursor
  +web()
    cursor pointer

.disabled
  background-color: $UI.colors.darkLightest

.disabledIcon
  color: $UI.colors.darkLighter

.span
  margin-left 2.5u
  justify-content center

.icon
  flex-shrink 0
  justify-content center
  margin-left 4u

.hint
  font(caption)
  margin-top 1u
