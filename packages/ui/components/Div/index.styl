_pushedSizes = ('xs' 's' 'm' 'l' 'xl' 'xxl')

.root
  &.rounded
    radius()

  &.circle
    radius(circle)

  // Shadow does not work without backgorund color
  &.with-shadow
    background-color $UI.colors.white

  for size in _pushedSizes
    &.pushed-{size}
      margin-left: $UI.gutters[size]

  &.bleed
    bleed()

  &.clickable
    cursor pointer
    user-select none

  &.disabled
    opacity 0.5
