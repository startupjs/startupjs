_size = 0.5u
_backgroundColor = $UI.colors.darkLighter
_fillerColor = $UI.colors.success
_duration = $UI.Progress.duration

.progress
  height _size
  background-color _backgroundColor
  radius()
  overflow hidden

.filler
  height _size
  background-color _fillerColor
  radius()

  +web()
    transition width (_duration/1000)s

.label
  margin-top 2px
