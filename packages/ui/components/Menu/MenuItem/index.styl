_borderColor = $UI.colors.primary
_borderSize = 2px

.root
  padding-left 2u
  padding-right @padding-left
  height 4u
  flex-direction row
  align-items center

  &.reverse
    flex-direction row-reverse

.border
  position absolute

  &.top
  &.bottom
    left 0
    right 0
    height _borderSize

  &.top
    top 0

  &.bottom
    bottom 0

  &.left
  &.right
    top 0
    bottom 0
    width _borderSize

  &.left
    left 0

  &.right
    right 0

.icon
  &.left
    margin-right 1u
  &.right
    margin-left 1u

.container
  flex 1

:export
  colors: $UI.colors
