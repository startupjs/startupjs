.dropdown
  &.default
    padding 2u
    padding-bottom 1u

  &.system
    background-color rgba(255, 255, 255, .9)

.systemMenu
  position absolute
  width 100%
  height 5u
  background-color $UI.colors.white

.case
  &.buttons
    margin 1.5u 1.5u 2u
    border-radius 1u
    background-color $UI.colors.white

.item
  &.default
    flex-direction row
    justify-content space-between
    border-bottom-width 1px
    border-bottom-color #cccccc

  &.buttons
    justify-content center
    align-items center
    height 6u
    border-bottom-width 1px
    border-bottom-color #cccccc

  &.popover
    justify-content center
    align-items center
    padding 12px

    &.active
      background-color #f7f7f7

  &.itemDown
    border-bottom-width 0

.itemText
  &.default
    padding 2u

  &.buttons
    padding 2u

  &.active
    color $UI.colors.primary

.captionText
  &.default
    padding 1u 2u 2u
    font-size 21px

    +web()
      font-weight 600

    +native()
      font-weight bold

.button
  &.buttons
    justify-content center
    align-items center
    margin -1u 1.5u 1.5u
    padding 2u
    border-radius 1u
    background-color $UI.colors.white

.iconActive
  &.default
    position absolute
    top 17px
    right 14px
    width 2u
    height 2u

  &.buttons
    position absolute
    top 17px
    left 14px
    width 2u
    height 2u
