.overlay
  position absolute
  cursor default
  height 100%
  width 100%
  left 0
  top 0

  +web()
    z-index 9998

.wrapper
  position absolute

  +web()
    z-index 9999

.popoverShtamp
  position absolute
  opacity 1
  left -999
  top -999
  z-index -1

.popover
  border-radius 1u
  position absolute
  align-items center
  justify-content center
  z-index 999
  shadow(3)

.content
  border-radius 1u
  background-color #ffffff
  width 100%
  overflow hidden

.caption
  align-self flex-start

.popoverArrow, .contentArrow
  border-radius .5u

:export
  shadows: $UI.shadows
