.popover
  border-radius 1u
  background-color $UI.colors.white
  overflow hidden

.overlay
  position absolute
  width 100%
  height 100%

.case, .areaCase
  flex 1
  width 100%
  height 100%

.arrow
  position absolute
  z-index 999
  border-width 10px
  border-style solid
  border-color transparent

.arrowBottom
  border-bottom-color $UI.colors.white

.arrowTop
  border-top-color $UI.colors.white

.arrowCenterLeft
  border-left-color $UI.colors.white

.arrowCenterRight
  border-right-color $UI.colors.white

:export
  shadows: $UI.shadows
