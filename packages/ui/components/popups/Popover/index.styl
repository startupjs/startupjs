.popover
  border-radius 1u
  background-color $UI.colors.white
  width 200px
  shadow(3)

.absolute
  position absolute

.wrapperArrow
  border-radius .5u

.wrapper
  position absolute
  opacity 0
  left 0
  top 0

.content
  overflow hidden
  height 100%

.shtamp
  overflow hidden
  position relative
  height 0
  left 0
  top 0
  width 0

.overlay
  position absolute
  width 100%
  height 100%

.case, .areaCase
  flex 1
  width 100%
  height 100%

:export
  shadows: $UI.shadows
