_white = $UI.colors.white
_l = 6u
_m = 5u
_s = 4u

.root
  +web()
    user-select none

  &.l
    width _l
    height @width

  &.m
    width _m
    height @width

  &.s
    width _s
    height @width

.avatarWrapper
  height 100%
  overflow hidden

.avatar
  justify-content center
  align-items center
  height 100%

.fallback
  color white

  &.s
    font(s)

  &.m
    font(m)

  &.l
    font(l)

.status
  position absolute
  z-index 1
  border 2px solid _white
  radius(circle)

  &.circle
    right 0
    bottom 0

  &.squared
  &.rounded
    bottom -0.25u
    right @bottom

  &.online
    background-color $UI.colors.success

  &.away
    background-color $UI.colors.warning

  &.l
    width 1.75u
    height @width

  &.m
    width 1.5u
    height @width

  &.s
    width 1.25u
    height @width
