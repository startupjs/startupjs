$this = merge(
  {
    avatarSizes: {
      s: 4u,
      m: 5u,
      l: 6u,
    },
    statusSizes: {
      s: 1.25u,
      m: 1.5u,
      l: 1.75u,
    },
    fallbackSizes: {
      s: 1.5u,
      m: 1.75u,
      l: 2u,
    }
  },
  $UI.Avatar,
  true
)

.root
  +web()
    user-select none

.avatarWrapper
  height 100%
  overflow hidden

.avatar
  justify-content center
  align-items center
  height 100%

.fallback
  color var(--color-text-on-color)

.status
  position absolute
  z-index 1
  border-width 2px
  border-color var(--color-border-main-strong)
  radius(circle)

  &.circle
    right 0
    bottom 0

  &.squared
  &.rounded
    bottom -0.25u
    right @bottom

  &.online
    background-color var(--color-bg-success)

  &.away
    background-color var(--color-bg-warning)

:export
  config: $this
