_white = $UI.colors.white
_xxl = 8u
_xl = 7u
_l = 6u
_m = 5u
_s = 4u
_xs = 3u

.root
  +web()
    user-select none

  &.xxl
    width _xxl
    height @width

  &.xl
    width _xl
    height @width

  &.l
    width _l
    height @width

  &.m
    width _m
    height @width

  &.s
    width _s
    height @width

  &.xs
    width _xs
    height @width

.avatarWrapper
  height 100%
  overflow hidden

.avatar
  justify-content center
  align-items center
  height 100%

.fallback
  color white

  &.xs
    font(xs)

  &.s
    font(s)

  &.m
    font(m)

  &.l
    font(l)

  &.xl
    font(xl)

  &.xxl
    font(xxl)

.status
  position absolute
  z-index 1
  border 2px solid _white
  radius(circle)

  &.circle
    right 0
    bottom 0

  &.squared
  &.rounded
    bottom -0.25u
    right @bottom

    &.xxl
    &.xl
      bottom -0.5u
      right @bottom

  &.online
    background-color $UI.colors.success

  &.away
    background-color $UI.colors.warning

  &.xxl
    width 2.25u
    height @width

  &.xl
    width 2u
    height @width

  &.l
    width 1.75u
    height @width

  &.m
    width 1.5u
    height @width

  &.s
    width 1.25u
    height @width

  &.xs
    width 1u
    height @width
