// ----- CONFIG: $UI.Button

$this = merge({
  heights: {
    xs: 2u,
    s: 3u,
    m: 4u,
    l: 5u,
    xl: 6u,
    xxl: 7u
  },
  outlinedBorderWidth: 1px,
  iconMargins: {
    xs: .5u,
    s: .5u,
    m: 1u,
    l: 1u,
    xl: 1.5u,
    xxl: 1.5u
  }
}, $UI.Button, true)

// ----- COMPONENT

_disabledOpacity = 0.25

.root
  &.disabled
    opacity _disabledOpacity

.label
  font-weight 500

  &.opacity
    opacity 0

  &.xs
    font(xs)

  &.s
    font(s)

  &.m
    font(m)

  &.l
    font(l)

  &.xl
    font(xl)

  &.xxl
    font(xxl)

.icon
  color: $UI.colors.dark

  &.opacity
    opacity 0

  &.flat
    color: $UI.colors.white

.load
  position absolute
  top 50%
  left 50%

// ----- JS EXPORTS

:export
  config: $this
  colors: $UI.colors