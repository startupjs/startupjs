// ----- CONFIG: $UI.Button

$this = merge({
  heights: {
    xs: 2u,
    s: 3u,
    m: 4u,
    l: 5u,
    xl: 6u,
    xxl: 7u
  },
  outlinedBorderWidth: 1px,
  iconMargins: {
    xs: .5u,
    s: .5u,
    m: 1u,
    l: 1u,
    xl: 1.5u,
    xxl: 1.5u
  }
}, $UI.Button, true)

// ----- COMPONENT

_disabledOpacity = 0.25

.root
  &.disabled
    opacity _disabledOpacity

.label
  fontFamily('normal', 500)

  &.invisible
    opacity 0

  &.xs
    font-size 1.25u
    line-height 1.75u

  &.s
    font(caption)

  &.m
    font(body2)

  &.l
    font(body1)

  &.xl
    font(h5)

  &.xxl
    font(h4)

.icon
  color: $UI.colors.dark

  &.invisible
    opacity 0

  &.flat
    color: $UI.colors.white

.loader
  position absolute

// ----- JS EXPORTS

:export
  config: $this
  colors: $UI.colors
