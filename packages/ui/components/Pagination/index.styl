_hoverOpacity = 0.5
_activeOpacity = 0.25
_white = $UI.colors.white
_primary = $UI.colors.primary
_buttonSize = 4.5u
_xsGutter = $UI.gutters.xs
_radius = 0.5u

.root
  flex-direction row

.button
  min-width _buttonSize
  min-height @min-width
  justify-content center
  align-items center
  padding 0 1u

.filled
  .button&
    background-color _white

    &.first
      background-color transparent

    &.last
      background-color transparent

    &.previous, &.next
      background-color: $UI.colors.darkLightest

    &.previous
      border-radius _radius 0 0 _radius

    &.next
      border-radius 0 _radius _radius 0

    &.active
      background-color _primary

    +web()
      &:hover:not(.active):not(.disabled)
        background-color $UI.colors.darkLightest

      &.first:hover, &.last:hover
        background-color transparent !important

  .label&
    &.active
      color _white

.floating
  .button&
    radius(circle)

    &.first
      margin-right _xsGutter

    &.last
      margin-left _xsGutter

    +web()
      &:hover:not(.active):not(.disabled)
        // using important to prevent TouchableOpacity default behavior
        opacity _hoverOpacity !important

      &:active:not(.active):not(.disabled)
        // using important to prevent TouchableOpacity default behavior
        opacity _activeOpacity !important

  .label&
    &.active
      color _primary
