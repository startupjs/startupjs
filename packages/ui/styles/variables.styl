$UI.media = merge({
  mobile: 480px, // DEPRECATED
  tablet: 768px,
  desktop: 1024px,
  wide: 1280px
}, $UI.media, true)

$UI.gutters = merge({
  xs: 0.5u,
  s: 1u,
  m: 2u,
  l: 3u,
  xl: 4u,
  xxl: 5u
}, $UI.gutters, true)

$fontNormal = "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Ubuntu, 'Helvetica Neue', sans-serif"
$fontHeading = "system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Ubuntu, 'Helvetica Neue', sans-serif"

$UI.fontFamilies = merge({
  normal: $fontNormal,
  heading: $fontHeading
}, $UI.fontFamilies, true)

$UI.fontWeights = {
  normal: 400,
  normalBold: 700,
  heading: 400,
  headingBold: 700
}

$UI.fontSizes = merge({
  xs: 1.25u,
  s: 1.5u,
  m: 1.75u,
  l: 2u,
  xl: 2.5u,
  xxl: 3u,
  xxxl: 4.5u,
  xxxxl: 6u,
  xxxxxl: 9u
}, $UI.fontSizes, true)

$UI.lineHeights = merge({
  xs: 1.75u,
  s: 2u,
  m: 2.5u,
  l: 3u,
  xl: 3.5u,
  xxl: 4u,
  xxxl: 6u,
  xxxxl: 8u,
  xxxxxl: 12u
}, $UI.lineHeights, true)
