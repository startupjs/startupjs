$UI.shadows = merge({
  '0': {},
  '1': {
    shadowColor: '#000',
    shadowOffset: {
      width: 0,
      height: 1
    },
    shadowOpacity: 0.2,
    shadowRadius: 2.22,

    elevation: 3
  },
  '2': {
    shadowColor: '#000',
    shadowOffset: {
      width: 0,
      height: 3
    },
    shadowOpacity: 0.15,
    shadowRadius: 4.65,

    elevation: 6
  },
  '3': {
    shadowColor: '#000',
    shadowOffset: {
      width: 0,
      height: 5
    },
    shadowOpacity: 0.15,
    shadowRadius: 8.27,

    elevation: 12
  },
  '4': {
    shadowColor: '#000',
    shadowOffset: {
      width: 0,
      height: 8
    },
    shadowOpacity: 0.2,
    shadowRadius: 12,

    elevation: 18
  }
}, $UI.shadows, true)

shadow(level=1)
  _shadow = $UI.shadows[''+level]
  if (_shadow) {
    box-shadow: unit($UI.shadows[''+level].shadowOffset.width, px) unit($UI.shadows[''+level].shadowOffset.height, px) unit($UI.shadows[''+level].shadowRadius, px) rgba(convert($UI.shadows[''+level].shadowColor), $UI.shadows[''+level].shadowOpacity)
    elevation: $UI.shadows[''+level].elevation
  }
  else {
    box-shadow none
    elevation 0
  }
