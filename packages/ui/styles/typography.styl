// DEPRECATED: Span
_headerSizes = {
  h1: xxxxxl,
  h2: xxxxl,
  h3: xxxl,
  h4: xxl,
  h5: xl,
  h6: l
}

_fontWeightNamesMap = {
  '100': 'Thin',
  '200': 'ExtraLight',
  '300': 'Light',
  '400': 'Regular',
  '500': 'Medium',
  '600': 'SemiBold',
  '700': 'Bold',
  '800': 'ExtraBold'
  '900': 'Black'
}

_defaultFontWeight = 400

font(size = m)
  // Workaround global built-in function s()
  // http://stylus-lang.com/docs/bifs.html#sfmt-
  size = _headerSizes[size] || size // DEPRECATED: Span
  size = 's' if size is s
  font-size: $UI.fontSizes[size]
  line-height $UI.lineHeights[size]

text(key = default)
  // color
  if key is description
    color: $UI.colors.secondaryText
  else
    color: $UI.colors.mainText

  // font, line
  if key is default
    font()
  else if key is description
    font()
  else if key is h1
    font(xxxxxl)
  else if key is h2
    font(xxxxl)
  else if key is h3
    font(xxxl)
  else if key is h4
    font(xxl)
  else if key is h5
    font(xl)
  else if key is h6
    font(l)

fontFamily(_fontName, _fontWeight = _defaultFontWeight, _fontStyle = '')
  if (!!match(_fontName, $UI.fontFamilies.normal) || !!match(_fontName, $UI.fontFamilies.heading) || !!match(',', _fontName))
    font-family _fontName
    font-weight _fontWeight
    font-style unquote(_fontStyle)
  else
    _fontWeightString = '' + _fontWeight
    _resultFontWeight = _fontWeightNamesMap[_fontWeightString]
    _result = _fontName + '-' + _resultFontWeight + replace(italic, Italic, _fontStyle)

    font-family _result
  