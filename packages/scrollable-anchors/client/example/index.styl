.root
  padding 5u 3u
  border-width 1px
  border-style dashed
  border-color var(--color-border-main-subtle)

  +desktop()
    margin 10u auto
    max-width 70u

.myScrollableArea
  border-width 1px
  border-style dashed
  border-color var(--color-border-main-subtle)
  padding 2u 1u
  height 50u

.anchors
  justify-content flex-end
  align-items center
  top 0
  left 0
  right 0
  z-index 1
  padding 1u 2u
  background-color var(--color-bg-main-strong)
  border-bottom-width 1px
  border-bottom-color var(--color-border-main-subtle)
  padding-top 3u

  +tablet()
    flex-direction row

.extraButton
  margin-bottom 1u

  +tablet()
    margin-bottom 0

.myAnchors
  flex-direction row
  justify-content flex-end
  padding 1u 0

.anchorBtn
  margin-left 1u

.anotherNestedArea
  height 40u

.flex
  flex 1

.wrapper
  background-color var(--color-bg-main-strong)

.backButton
  max-width 2u
  margin-top 4u
  margin-left 2u

  +tablet()
    padding-left 3u
    padding-right 1u
