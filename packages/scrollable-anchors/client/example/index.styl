.root
  padding 5u 3u
  position relative
  border 1px dashed $UI.colors.darkLight
  +desktop()
    margin 10u auto
    max-width 70u

.myScrollableArea
  border 1px dashed $UI.colors.darkLight
  padding 2u 1u
  height 50u

.anchors
  position absolute
  flex-direction row
  justify-content flex-end
  top 0
  left 0
  right 0
  z-index 1
  padding 1u 2u
  background-color $UI.colors.white
  border-bottom 1px solid $UI.colors.darkLight
  padding-top 3u

.myAnchors
  flex-direction row
  justify-content flex-end
  padding 1u 0

.anchorBtn
  margin-left 1u

.anotherNestedArea
  height 40u

.flex
  flex 1
