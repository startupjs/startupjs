$input = var(--color-border)
$header = var(--color-text-description)
$darkHeader = var(--color-text-inverse)
$value = var(--color-text-success)
$type = var(--color-text-info)
$valueDark = var(--color-text-success-strong)
$typeDark = var(--color-text-info-strong)

.header
  font-size 12px
  letter-spacing 1px
  fontFamily('normal', 600)
  color $header
  &.right
    text-align right

.possibleValue
  flex-direction row

.value
  color $value
  font-style italic

.type
  color $type
  font-style italic

.dark
  &.header
    color $darkHeader
  &.value
    color $valueDark
  &.type
    color $typeDark

.checkbox
  align-self flex-end

.unsupported
  color var(--color-text-description)
  text-align right

.separator
  color var(--color-text-placeholder)

.vCenter
  justify-content center

.required
  margin-top 0.5u
  align-self flex-start

.badJSON
  color var(--color-text-error)
