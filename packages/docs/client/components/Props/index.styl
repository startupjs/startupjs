$border = $UI.colors.darkLight
$darkTopBg = #212121
$darkBottomBg = #333333

.root
  margin-top 2u

.top
  background-color #fafafa
  border-top-left-radius 1u
  border-top-right-radius 1u
  padding-top 1u

.bottom
  padding-top 4u
  background-color #f5f5f5
  border-bottom-left-radius 1u
  border-bottom-right-radius 1u

.scroll
  padding-bottom 2u

  &Content
    flex-direction column
    flex-grow 1
    padding 0 2u

.display
  margin .5u 2u

.dark
  &.top
    background-color $darkTopBg

  &.bottom
    background-color $darkBottomBg
