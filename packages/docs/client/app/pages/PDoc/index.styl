@require '../../constants.styl'
$page = $UI.media.tablet
$gutter-s = 2u
$gutter-l = 6u
$gutter-xl = 10u

.root
  flex 1

.content
  padding-left $gutter-s
  padding-right $gutter-s
  max-width $page + $gutter-s * 2
  padding-top $TOPBAR_HEIGHT
  +tablet()
    max-width $page + $gutter-l * 2
    padding-left $gutter-l
    padding-right $gutter-l
  +wide()
    max-width $page + $gutter-xl * 2
    padding-left $gutter-xl
    padding-right $gutter-xl
