  margin-bottom .5u

.input
  border-width 1px
  border-radius .5u
  padding 1u

.eye
  position absolute
  right 0
  bottom .5u
  z-index 1

.img
  width 3u
  height @width
  margin-right 2u

.errorMsg
  color $UI.colors.error