{
  "private": true,
  "engines": {
    "node": ">= 14"
  },
  "workspaces": [
    "packages/*",
    "styleguide"
  ],
  "scripts": {
    "init-project": "rm -rf ./temp/app && LINK=X LOCAL_DIR=./temp ./packages/startupjs/cli.js init app",
    "generate-module-map": "echo 'Creating moduleMap.json...' && node ./scripts/babel/createModuleMap.js && git add ./packages/babel-plugin-startupjs/moduleMap.json && echo '...success'",
    "android": "cd styleguide && yarn android",
    "ios": "cd styleguide && yarn ios",
    "start": "cd styleguide && yarn start",
    "metro": "cd styleguide && yarn metro",
    "web": "cd styleguide && yarn web",
    "server": "cd styleguide && yarn server",
    "android-release": "cd styleguide && yarn android-release",
    "ios-release": "cd styleguide && yarn ios-release",
    "build": "cd styleguide && yarn build",
    "start-production": "cd styleguide && yarn start-production",
    "postinstall": "patch-package && startupjs patch-package",
    "bootstrap": "npx lerna bootstrap",
    "clean": "echo 'Cleaning root node_modules...' && rm -rf node_modules && npx lerna clean --yes",
    "publish-stable": "npx lerna publish --since=$(git log --all --grep='^v[0-9]+\\.[0-9]+\\.[0-9]+' -E -1 --format=format:%H)",
    "publish-patch": "npx lerna publish patch --since=$(git log --all --grep='^v[0-9]+\\.[0-9]+\\.[0-9]+' -E -1 --format=format:%H)",
    "publish-minor": "npx lerna publish minor --since=$(git log --all --grep='^v[0-9]+\\.[0-9]+\\.[0-9]+' -E -1 --format=format:%H)",
    "publish-alpha-minor": "npx lerna publish preminor --dist-tag next --since=$(git log --all --grep='^v[0-9]+\\.[0-9]+\\.[0-9]+' -E -1 --format=format:%H)",
    "publish-alpha": "npx lerna publish prerelease --dist-tag next --since=$(git log --all --grep='^v[0-9]+\\.[0-9]+\\.[0-9]+' -E -1 --format=format:%H)",
    "publish-canary": "npx lerna publish prerelease --preid canary --dist-tag canary --since=$(git log --all --grep='^v[0-9]+\\.[0-9]+\\.[0-9]+' -E -1 --format=format:%H)"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.6.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-pug": "^0.8.4",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^3.1.0",
    "lerna": "3.22.1",
    "lint-staged": "^9.5.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn generate-module-map"
    }
  },
  "license": "MIT"
}
