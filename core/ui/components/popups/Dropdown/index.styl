.dropdown
  &.list
    padding 2u
    padding-bottom 1u

  &.buttons
    max-height 100%

.case
  &.buttons
    margin 1.5u 1.5u 2u
    border-radius 1u
    background-color var(--color-bg-main-strong)

.caption
  align-self flex-start

.captionText
  &.list
    padding 1u 2u 2u
    font-size 21px

    +web()
      fontFamily('normal', 600)

    +native()
      fontFamily('normal', 600)

.button
  &.buttons
    justify-content center
    align-items center
    margin -1u 1.5u 1.5u
    padding 2u
    border-radius 1u
    background-color var(--color-bg-main-strong)

.popover
  border-radius .5u
  shadow(2)

.drawerReset
  background-color transparent
  height auto
  box-shadow none
  border-radius 0

:export
  media: $UI.media
