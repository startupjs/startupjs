.item
  &.list
    flex-direction row
    justify-content space-between
    border-bottom-width 1px
    border-bottom-color #cccccc

  &.buttons
    justify-content center
    align-items center
    height 6u
    border-bottom-width 1px
    border-bottom-color #cccccc

  &.popover
    padding 12px

  &.itemDown
    border-bottom-width 0

.itemText
  &.list
    padding 2u

  &.buttons
    padding 2u

  &.active
    color var(--color-text-primary)

.iconActive
  &.list
    position absolute
    top 17px
    right 14px
    width 2u
    height 2u

  &.buttons
    position absolute
    top 17px
    left 14px
    width 2u
    height 2u

.selectMenu
  background-color #eeeeee
