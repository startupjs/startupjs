_iconMargin = 0.5u

.iconWrapper
  &.left
    &.xs
    &.s
    &.m
      margin-right 0.5u

    &.l
    &.xl
    &.xxl
      margin-right 1u

  &.right
    &.xs
    &.s
    &.m
      margin-left 0.5u

    &.l
    &.xl
    &.xxl
      margin-left 1u

.item
  align-items center

.separator
  margin-left 2px
  margin-right @margin-left
  color var(--color-text-description)

.separator,
.content
  &.xs
    font-size 1.25u
    line-height 1.75u

  &.s
    font(caption)

  &.m
    font(body2)

  &.l
    font(body1)

  &.xl
    font(h5)

  &.xxl
    font(h4)
